<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragmentWeatherLayout"
        tools:background="#E6D3D3"
        android:id="@+id/layoutText"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введите название города на английском"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:gravity="center"
            tools:text="hello"
            android:maxLines="1"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn"
            android:layout_marginTop="10dp"
            android:text="Найти"
            android:backgroundTint="#FFF13939"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:background="#F13939"
        tools:ignore="MissingConstraints"
        android:id="@+id/fragmentWeatherLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutText"/>
</androidx.constraintlayout.widget.ConstraintLayout>